<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/miCuenta.css">
    <title>Mi Cuenta</title>
<body>
    <%- include('./partials/header') %>
    <main class="main-cuenta">
        <div class="container-perfil">
            <div class="info-user">
                <div class="image-user">
                    <img src="./../../img/users_images/<%= user.userImage %>" alt="Foto de perfil de usuario">
                </div>
                <h2>Nombre de Usuario</h2>
            </div>
            <div class="buttons-users">
                <div class="user-button">
                    <input type="button" value="Editar información">
                </div>
                <div class="user-button">
                    <input type="button" value="Cerrar sesión">
                </div>
            </div>
            
        </div>
        <div class="mis-datos">
            <h3>Mis Datos</h3>
            <div class="user-email">
                <!--icon-->
                <h4>Correo Electrónico</h4>
                <p><%= user.email %></p>
            </div>
            <div class="user-nombre">
                <!--icon-->
                <h4>Nombre y Apellido</h4>
                <p><%= user.username+" "+user.lastname %> </p>
            </div>
            <div class="user-telefono">
                <!--icon-->
                <h4>Celular</h4>
                <% if (user.telephone) { %>
                    <p><%= user.telephone%> </p>
                <% } else {%>
                    <p>Sin completar</p>
                <% } %>
            </div>
            <h3>Datos de Envío</h3>
            <div class="user-postal">
                <!--icon-->
                <h4>Código Postal</h4>
                <% if (user.postalCode) { %>
                    <p><%= user.postalCode %></p>
                <% } else {%>
                    <p>Sin completar</p>
                <% } %> 
            </div>
            <div class="user-direccion">
                <!--icon-->
                <h4>Dirección</h4>
                <% if (user.direction) { %>
                    <p><%= user.direction %></p>
                <% } else {%>
                    <p>Sin completar</p>
                <% } %> 
            </div>
            <h3>Tarjetas Asociadas</h3>
            <% if (user.cards) { %>
                <% user.cards.forEach(card=>{%>
                    <div class="user-tarjetas">
                        <!--icon-->
                        <h4>Tarjeta</h4>
                        <p><%= card.type %></p>
                        <p><%= card.number %></p>
                    </div>
                <%}) %> 
            <% } else {%>
                <div class="user-tarjetas">
                    <h4>No cuenta con targetas asociadas</h4>
                </div>
            <% } %>
            <div class="user-buttonEliminar">
                <input type="button" value="Eliminar cuenta">
            </div>
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>