<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/newProduct.css">
    <title>La Vie Naturelle - Cargar Producto</title>
<body>
    <%- include('./partials/header') %>
        <main>
            <section>
                <div>
                    <h2>AGREGAR PRODUCTO</h2>
                </div>
                <div>
                    <form action="/product/newProduct" method="post" enctype="multipart/form-data">
                        <div>
                            <label for="nameProduct">
                                <h4>Nombre Del Producto</h4>
                            </label>
                            <input type="text" name="nameProduct" id="nameProduct" class="textArea" required <% if (locals.old && old.nameProduct) { %>
                                value="<%= old.nameProduct %>"
                            <% } %>>
                            <% if (locals.errors && errors.nameProduct) { %>
                                <p class="alerta"><%= errors.nameProduct.msg %> </p>
                            <% } %>
                        </div>
                        <div>
                            <label for="description">
                                <h4>Descripcion</h4>
                            </label>
                            <textarea name="description" id="description" cols="30" rows="10" class="textArea"required><% if (locals.old && old.description) { %><%= old.description %><% } %></textarea>
                        </div>
                        <div>
                            <label for="Category">
                                <h5>Categoria del producto</h5>
                            </label>
                            <select name="category" id="Category">
                                <% categories.map(category=>{ %>
                                    <option value="<%= category.id %>" <% if(locals.old && old.category == category){%>selected<%}%>><%= category.categoryName %></option>
                                <% }) %> 
                            </select>
                        </div>
                        <div>
                            <label for="image">
                                <h5>Insertar imagen</h5>
                            </label>
                            <input type="file" id="image" name="image" accept="image/png, image/jpeg" required>
                            <% if (locals.errors && errors.image) { %>
                                <p class="alerta"><%= errors.image.msg %> </p>
                            <% } %>
                        </div>
                        <div>
                            <label for="fragance">Fragancia</label>
                            <select name="fragrance" id="fragrance">
                                <% fragrances.map(fragrance=>{ %>
                                    <option value="<%= fragrance.id %>" <%if(locals.old && old.fragrance){%>selected<%}%>><%= fragrance.nameFragrance %></option>
                                <%}) %> 
                            </select>
                        </div>
                        <div>
                            <label for="ingredients">Ingredientes</label>
                            <input type="text" name="ingredients" id="ingredients" class="textArea"<% if (locals.old && old.ingredients) { %>
                                value="<%= old.ingredients %>"
                            <% } %>>
                        </div>
                        <div>
                            <label for="modeOfUse">Modo de uso</label>
                            <input type="text" name="modeOfUse" id="modeOfUser" class="textArea"<% if (locals.old && old.modeOfUse) { %>
                                value="<%= old.modeOfUse %>"
                            <% } %>>
                        </div>
                        <div>
                            <label for="grams">Cantidad</label>
                            <select name="grams" id="grams" class="textArea">
                                <option value="70">70 gramos</option>
                                <option value="100" selected>100 gramos</option>
                                <option value="150">150 gramos</option>
                                <option value="250">250 gramos</option>
                            </select>
                        </div>
                        <div>
                            <label for="price">
                                <h5>Precio</h5>
                            </label>
                            <input type="number" name="price" id="price" min="0" class="textArea"<% if (locals.old && old.price) { %>
                                value="<%= old.price %>"
                            <% } %>>
                            <% if (locals.errors && errors.price) { %>
                                <p class="alerta"><%= errors.price.msg %> </p>
                            <% } %>
                        </div>
                        <div class="botons">
                            <input type="submit" value="Agregar">
                            <input type="reset" value="Borrar">
                        </div>
                    </form>
                </div>
            </section>
        </main>
        <%- include('./partials/footer') %>
</body>

</html>